<div class="hide apparitionG_value" data-apparitiong-value="{{form.apparitionG.vars.value}}"></div>
<div class="hide apparitionP_value" data-apparitionp-value="{{form.apparitionP.vars.value}}"></div>

<div class="box-body collapse in">
    {{ form_start(form,{ 'attr': {'class': 'form-horizontal','id': 'form'}}) }}

    {% if slide.file and slide.file.path == 'uploads' %}
        <div class="row" data-plugin="lightgallery" data-selector=".thumbnail" data-thumbnail="true">
            <div class="col-md-offset-4 col-md-4">
                <div class="thumbnail" data-src="{{asset(slide.file.pathname)}}">
                    <img src="{{asset(slide.file.pathname)}}" alt="" data-toggle="tooltip">
                    <div class="caption text-center">
                        <span>
                            <strong>Cliquer pour agrandir</strong>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    {% elseif image %}
        <div class="row" data-plugin="lightgallery" data-selector=".thumbnail" data-thumbnail="true">
            <div class="col-md-offset-4 col-md-4">
                <div class="thumbnail" data-src="{{asset('admin/img/no_image_available.jpg')}}">
                    <img src="{{asset('admin/img/no_image_available.jpg')}}" alt="" data-toggle="tooltip">
                </div>
            </div>
        </div>
    {% endif %}

    <hr class="b-s-dashed">
    <div class="form-group">
        <label for="{{form.grandTitre.vars.id}}" class="col-sm-2 control-label">Grand Titre</label>
        <div class="col-sm-10">
            <input type="text" placeholder="Le grand titre" class="form-control" name="{{form.grandTitre.vars.full_name}}" id="{{form.grandTitre.vars.id}}" value="{{form.grandTitre.vars.value}}">
            {% do
                form.grandTitre.setRendered %}
            {% for error in form.grandTitre.vars.errors %}

                <small class="text-danger">
                    {{error.message}}
                </small>
            {% endfor %}
        </div>
    </div>
    <div class="form-group">
        <label for="{{form.apparitionG.vars.id}}" class="col-sm-2 control-label">Apparition</label>
        <div class="col-sm-10">
            <select class="form-control" name="{{form.apparitionG.vars.full_name}}" id="{{form.apparitionG.vars.id}}">
                {% for app in apparitions %}
                    <option value="{{app.value}}">{{app.option}}</option>
                {% endfor %}
            </select>
            {% do
                form.apparitionG.setRendered %}
            {% for error in form.apparitionG.vars.errors %}

                <small class="text-danger">
                    {{error.message}}
                </small>
            {% endfor %}

        </div>
    </div>
    <hr class="b-s-dashed">
    <div class="form-group">
        <label for="{{form.petitTitre.vars.id}}" class="col-sm-2 control-label">Petit Titre</label>
        <div class="col-sm-10">
            <input type="text" placeholder="Le petit titre" class="form-control" name="{{form.petitTitre.vars.full_name}}" id="{{form.petitTitre.vars.id}}" value="{{form.petitTitre.vars.value}}"/>
            {% do
                form.petitTitre.setRendered %}
            {% for error in form.petitTitre.vars.errors %}

                <small class="text-danger">
                    {{error.message}}
                </small>
            {% endfor %}
        </div>
    </div>
    <div class="form-group">
        <label for="{{form.apparitionP.vars.id}}" class="col-sm-2 control-label">Apparition</label>
        <div class="col-sm-10">
            <select class="form-control"  name="{{form.apparitionP.vars.full_name}}" id="{{form.apparitionP.vars.id}}">
                {% for app in apparitions %}
                    <option value="{{app.value}}">{{app.option}}</option>
                {% endfor %}
            </select>
            {% do
                form.apparitionP.setRendered %}
            {% for error in form.apparitionP.vars.errors %}

                <small class="text-danger">
                    {{error.message}}
                </small>
            {% endfor %}
        </div>
    </div>
    <hr class="b-s-dashed">
    <div class="form-group">
        <label for="{{form.file.vars.id}}" class="col-sm-2 control-label">Image</label>
        <div class="col-sm-10">
            <div class="file-loading">
                <input type="file" name="{{form.file.vars.full_name}}" id="{{form.file.vars.id}}">
            </div>
            <span class="help-block">Les dimensions minimales sont de 1900x930.</span>
            {% do
                form.file.setRendered %}
            {% for error in form.file.vars.errors %}
                <small class="text-danger">
                    {{error.message}}
                </small>
            {% endfor %}
        </div>
    </div>
    <hr class="b-s-dashed">
    {{ form_widget(form) }}
    <button class="btn btn-success pull-right">{{ button_label|default('Enregistrer') }}</button>
    {{ form_end(form) }}
</div>