{% extends "admin/base_admin.html.twig" %}

{% block title %}
    Slide index
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="box">
                <header>
                    <h3>Liste Slide</h3>
                    <div class="box-tool">
                        <a class="btn btn-pill btn-success u-posRelative" href="{{ path('slide_new') }}">
                            <i class="fa fa-fw fa-plus"></i>
                            <span class="waves"></span>
                        </a>
                    </div>
                </header>
                <div class="box-body">
                    <table id="list" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr class=" bg-belize-hole">
                                <th>#</th>
                                <th>GrandTitre</th>
                                <th>PetitTitre</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for slide in slides %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ slide.grandTitre }}</td>
                                    <td>{{ slide.petitTitre }}</td>
                                    {% if slide.file %}
                                        <td class="text-center">
                                            <img class="img-thumbnail img-responsive" src="{{asset(slide.file.pathname)| imagine_filter('squared_thumbnail')}}" alt="">
                                        </td>
                                    {% else %}
                                        <td class="text-center">
                                            <img class="img-thumbnail img-responsive" src="{{asset('admin/img/no_image_available.jpg') | imagine_filter('squared_thumbnail')}}" alt="">
                                        </td>
                                    {% endif %}
                                    <td class="text-center">
                                        <a class="btn btn-circle btn-default" href="{{ path('slide_show', {'id': slide.id}) }}">
                                            <i class="fa fa-fw fa-eye"></i>
                                        </a>
                                        <a class="btn btn-circle btn-info" href="{{ path('slide_edit', {'id': slide.id}) }}">
                                            <i class="fa fa-fw fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#list').dataTable({
                //paging: true,
                lengthChange: false,
                info: false,
                "language": {
                    "url": "{{asset('admin/js/French.json')}}"
                }
            });
        });
    </script>
{% endblock %}